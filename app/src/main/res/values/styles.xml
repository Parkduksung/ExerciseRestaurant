<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="LoadingStatusBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorGray</item>
    </style>

    <style name="TapTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="colorPrimary">@color/colorBlue</item>
    </style>

    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="colorPrimary">@color/colorBlue</item>
    </style>


    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="HintText2" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="RefreshLayout" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@drawable/button_refresh_textcolor</item>
        <item name="android:textSize">8dp</item>
        <item name="android:background">@color/colorWhite</item>
    </style>


    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">8dp</item>
    </style>

</resources>
