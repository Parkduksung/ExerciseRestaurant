<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="40"
    tools:ignore="ContentDescription,SpUsage.NestedWeights,SpUsage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        tools:ignore="RtlHardcoded">

        <ImageButton
            android:id="@+id/ib_question_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@color/colorWhite"
            app:srcCompat="@drawable/ic_back" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/question_main_text1"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:gravity="center"
        android:text="@string/question_main_text2"
        android:textColor="@color/colorGray"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/et_question_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="12"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="@string/question_main_text3">


    </EditText>

    <Button
        android:id="@+id/btn_send_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="3"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:text="@string/question_main_text4"
        android:textColor="@color/colorWhite" />

</LinearLayout>


