<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="ContentDescription,Autofill,TextFields">


    <ProgressBar
        android:id="@+id/pb_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorBlue"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/ib_question_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorWhite"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/tv_question_context1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ib_question_back"
        android:layout_marginTop="20sp"
        android:gravity="center"
        android:text="@string/question_main_text1"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_question_context2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_question_context1"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/question_main_text2"
        android:textColor="@color/colorGray"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/et_question_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tv_question_context2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/border"
        android:gravity="center"
        android:hint="@string/question_main_text3"
        android:textSize="17sp"
        tools:ignore="Autofill,TextFields" />

    <Button
        android:id="@+id/btn_send_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_question_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="@color/colorAccent"
        android:gravity="center"
        android:text="@string/question_main_text4"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />

</RelativeLayout>
