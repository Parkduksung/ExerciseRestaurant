<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:ignore="ContentDescription,SpUsage,NestedWeights">


    <ProgressBar
        android:id="@+id/pb_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorBlue"
        android:padding="150dp"
        android:visibility="visible" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="40"
        tools:ignore="ContentDescription,SpUsage.NestedWeights,SpUsage">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            tools:ignore="RtlHardcoded">

            <ImageButton
                android:id="@+id/ib_question_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@color/colorWhite"
                app:srcCompat="@drawable/ic_back" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20sp"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/question_main_text1"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:text="@string/question_main_text2"
            android:textColor="@color/colorGray"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/et_question_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="12"
            android:background="@drawable/border"
            android:gravity="center"
            android:hint="@string/question_main_text3"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_send_question"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="3"
            android:backgroundTint="@color/colorAccent"
            android:gravity="center"
            android:text="@string/question_main_text4"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

    </LinearLayout>

</RelativeLayout>
