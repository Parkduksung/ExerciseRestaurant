<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/address_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:weightSum="40"
    tools:ignore="SpUsage,ContentDescription,NestedWeights,UselessParent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:weightSum="10">

            <ImageButton
                android:id="@+id/ib_home_address_back"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_weight="2"
                android:background="@color/colorWhite"
                android:src="@drawable/ic_back" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="80dp"
                android:layout_weight="8"
                android:gravity="center"
                android:text="@string/address_title"
                android:textSize="35dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="37">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/colorGray"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_address1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrayDark"
                                android:gravity="center"
                                android:text="@string/address_select1"
                                android:textColor="@color/colorWhite"
                                android:textSize="20dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_address2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrayDark"
                                android:gravity="center"
                                android:text="@string/address_select2"
                                android:textColor="@color/colorGrayBasic"
                                android:textSize="20dp">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_address3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorGrayDark"
                                android:gravity="center"
                                android:text="@string/address_select3"
                                android:textColor="@color/colorGrayBasic"
                                android:textSize="20dp" />


                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_address"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>