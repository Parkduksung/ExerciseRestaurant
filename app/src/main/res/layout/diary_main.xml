<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    tools:ignore="UselessParent, NestedWeights, ContentDescription,SpUsage, DisableBaselineAlignment,RtlHardcoded">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageButton
                    android:id="@+id/ib_diary_left_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:src="@drawable/left_arrow" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_diary_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_diary_day_of_week"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tv_diary_day"
                        android:gravity="center"
                        android:textStyle="bold" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/ib_diary_right_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:src="@drawable/right_arrow" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="@color/colorWhite">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_diary_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:overScrollMode="never" />

                <TextView
                    android:id="@+id/tv_diary_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/diary_main_no_login_state" />

                <ProgressBar
                    android:id="@+id/pb_diary_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/colorBlue"
                    android:visibility="invisible" />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_add_eat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/select_diary_item"
                android:drawableTop="@drawable/ic_food"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:stateListAnimator="@null"
                android:text="@string/tv_diary_add_eat"
                android:textSize="10dp"
                android:weightSum="6" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_add_exercise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/select_diary_item"
                android:drawableTop="@drawable/ic_exercise"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:stateListAnimator="@null"
                android:text="@string/tv_diary_add_exercise"
                android:textSize="10dp"
                android:weightSum="6" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>